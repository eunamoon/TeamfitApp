<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- 설명 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="TeamFit를 시작하여\n나와 딱 맞는 팀원들과\n사이드 프로젝트를 시작해보세요!"
            android:textAlignment="center"
            android:textSize="16sp" />

        <!-- 이름 -->
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12dp" />

        <!-- 비밀번호 -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 (영문 + 숫자 8자 이상)"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"/>
        <!-- 비밀번호 확인-->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/sendVerificationEmailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증 메일 보내기" />

        <Button
            android:id="@+id/verifyCheckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일 인증 상태 확인"
            android:layout_marginTop="5dp" />

        <!-- 생년월일 -->
        <EditText
            android:id="@+id/birthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="생년월일 (ex. 2003.03.03)"
            android:inputType="text"
            android:layout_marginTop="12dp"/>

        <!-- 휴대폰 번호 -->
        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="휴대폰 번호"
            android:inputType="phone"
            android:layout_marginTop="12dp"/>

        <!-- 다음 버튼 -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</ScrollView>