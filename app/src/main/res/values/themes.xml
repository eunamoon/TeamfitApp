<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TeamFitApp_C" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 배경색을 흰색으로 -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- ActionBar 색상을 흰색으로 -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>

        <!-- 상태바 색상을 흰색으로 -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- 네비게이션바 색상을 흰색으로 -->
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- 폰트 유지 -->
        <item name="android:fontFamily">@font/pretendard</item>

        <!-- ActionBar 스타일 적용 -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="Theme.TeamFitApp_C" parent="Base.Theme.TeamFitApp_C" />

    <style name="ActionBarStyle" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <!-- ActionBar 배경을 흰색으로 -->
        <item name="android:background">@android:color/white</item>
        <!-- ActionBar 텍스트 색상을 검은색으로 -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <!-- 뒤로가기 버튼 색상도 검은색으로 -->
        <item name="colorControlNormal">@color/black</item>
        <!-- ActionBar 그림자 제거 -->
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="titleTextAppearance">@style/ActionBarTitleTextStyle</item>
    </style>

    <!-- ActionBar 타이틀 텍스트 스타일 -->
    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>